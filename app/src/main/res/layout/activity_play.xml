<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/play_species_1_bot1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot1Species1Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/play_species_2_bot1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot1Species2Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/play_species_3_bot1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot1Species3Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/bot1DeckLabel"
                    android:layout_width="70dp"
                    android:layout_height="86dp"
                    android:background="@drawable/bg_deck_box"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/logLabel"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/bg_board_panel"
                    android:gravity="center|top"
                    android:padding="8dp"
                    android:text="@string/play_log_title"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bot2DeckLabel"
                    android:layout_width="70dp"
                    android:layout_height="86dp"
                    android:background="@drawable/bg_deck_box"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_forage_zone"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/biomeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_food_token" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_food_token" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_food_token" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_food_token" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.95"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/humanSpecies1Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="8dp"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/humanSpecies2Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="8dp"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/humanSpecies3Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="8dp"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_board_panel"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/turnLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/humanDeckLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_deck_box"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/humanHandLabel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.8"
                        android:background="@drawable/bg_hand_slots"
                        android:padding="8dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCreateSpecies"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="@string/play_action_create_species"
                        android:textSize="10sp"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonReplaceCard"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="@string/play_action_replace_card"
                        android:textSize="10sp"
                        app:cornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPass"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="@string/play_action_pass"
                        android:textSize="10sp"
                        app:cornerRadius="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/play_species_1_bot2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot2Species1Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/play_species_2_bot2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot2Species2Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/play_species_3_bot2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bot2Species3Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_species_card"
                android:padding="8dp"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
