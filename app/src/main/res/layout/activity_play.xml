<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/play_species_1_bot1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot1Species1Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/play_species_2_bot1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot1Species2Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/play_species_3_bot1"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot1Species3Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.36"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bot1DeckLabel"
                    android:layout_width="52dp"
                    android:layout_height="58dp"
                    android:background="@drawable/bg_deck_box"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/logLabel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/bg_board_panel"
                    android:gravity="center|top"
                    android:padding="4dp"
                    android:text="@string/play_log_title"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeStepGranularity="1sp" />

                <TextView
                    android:id="@+id/bot2DeckLabel"
                    android:layout_width="52dp"
                    android:layout_height="58dp"
                    android:background="@drawable/bg_deck_box"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_forage_zone"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/biomeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/biomeEffectsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/forageTokensContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.62"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/humanSpecies1Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="4dp"
                    
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

                <TextView
                    android:id="@+id/humanSpecies2Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="4dp"
                    
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

                <TextView
                    android:id="@+id/humanSpecies3Label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/bg_species_card"
                    android:padding="4dp"
                    
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.18"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_board_panel"
                android:orientation="vertical"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/humanDeckLabel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/bg_deck_box"
                            android:gravity="center"
                            android:textSize="8sp" />

                        <LinearLayout
                            android:id="@+id/humanHandContainer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/bg_hand_slots"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:weightSum="5">

                            <TextView
                                android:id="@+id/humanHandCard1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/bg_hand_card_slot"
                                android:gravity="center"
                                android:padding="4dp"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/humanHandCard2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/bg_hand_card_slot"
                                android:gravity="center"
                                android:padding="4dp"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/humanHandCard3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/bg_hand_card_slot"
                                android:gravity="center"
                                android:padding="4dp"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/humanHandCard4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/bg_hand_card_slot"
                                android:gravity="center"
                                android:padding="4dp"
                                android:textSize="8sp" />

                            <TextView
                                android:id="@+id/humanHandCard5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="2dp"
                                android:background="@drawable/bg_hand_card_slot"
                                android:gravity="center"
                                android:padding="4dp"
                                android:textSize="8sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/messageOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_board_panel"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/messageOverlayText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonContinueMessage"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Continuar"
                        android:textSize="10sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCreateSpecies"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:text="@string/play_action_create_species"
                        android:textSize="8sp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonReplaceCard"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="3dp"
                        android:text="@string/play_action_replace_card"
                        android:textSize="8sp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPass"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:text="@string/play_action_discard_hand"
                        android:textSize="8sp"
                        app:cornerRadius="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/play_species_1_bot2"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot2Species1Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/play_species_2_bot2"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot2Species2Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/play_species_3_bot2"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/bot2Species3Label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_species_card"
                android:padding="4dp"
                
                android:gravity="top|start"
                android:textColor="#111111"
                android:typeface="monospace"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="4sp"
                android:autoSizeMaxTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
